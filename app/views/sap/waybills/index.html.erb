<script type="text/javascript">
  $(function() {
    $('#doc-date').change(function() {
      var date = $('#doc-date').val();
      window.location = '<%= sap_waybills_url %>?date=' + date;
    });
  });
</script>
<div class="page-header">
  <h2>საქონლის მოძრაობა <small>ზედნადებთან დაკავშირებული დოკუმენტები</small></h2>
</div>
<div class="well">
  თარიღი<br>
  <input id="doc-date" type="text" class="datepicker span2" value="<%= @date.strftime('%d-%b-%Y') %>" />
</div>
<div class="btn-toolbar">
  <%= link_to icon_text('refresh', 'სინქრონიზაცია'), sap_sync_waybills_url, :class => :btn, :method => :post, :confirm => 'ნამდვილად გინდათ სინქრონიზაცია?' %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th width="16" class="center"><%= icon_text 'picture'%></th>
      <th width="100">№, თარიღი</th>
      <th>საწყობი</th>
    </tr>
  </thead>
  <tbody>
    <% @docs.each do |doc| -%>
      <tr class="<%= doc.rs_sent? ? 'sent' : ( doc.rs_closed? ? 'closed' : 'common') %>">
        <td class="center">
          <%= icon_text(doc.type_icon, nil, :tooltip => doc.type_text) %><br/>
          <%= icon_text(doc.rs_status_icon, nil, :tooltip => doc.rs_status_text) %>
        </td>
        <td>
          <%= link_to doc.mblnr, sap_show_waybill_url(doc) %><br/>
          <span class="muted"><%= doc.date.strftime('%d-%b-%Y') %></span>
        </td>
        <td>
          <% if doc.warehouse -%>
            <%= doc.warehouse.name %><br/>
            <span class="muted"><strong><%= doc.warehouse.werks %></strong> <%= doc.warehouse.lgort %></span>
          <% end -%>
       	</td>
      </tr>
    <% end -%>
  </tbody>
</table>