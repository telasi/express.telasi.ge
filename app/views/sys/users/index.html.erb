<div class="page-header">
  <h2>მომხმარებლები</h2>
</div>
<div class="btn-toolbar">
  <%= link_to icon_text('plus', 'ახალი მომხმარებელი'), sys_new_user_url, :class => ['btn'] %>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>მომხმარებელი</th>
      <th width="200">ელ.ფოსტა</th>
      <th width="200">მობილური</th>
      <th width="50" class="center"><%= icon_text 'cog', nil, :tooltip => 'მოქმედებები' %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| -%>
      <tr>
        <td>
        	<%= link_to user.name, sys_show_user_url(user) %>
        	<span class="muted"><%= user.full_name %></span>
        	<%= roles(user) %>
        </td>
        <td><%= mail_to user.email %></td>
        <td><%= C12.format_mobile(user.mobile) %></td>
        <td class="center">
          <%= link_to icon_text('pencil', nil, :tooltip => 'რედაქტირება'), sys_edit_user_url(user) -%>
          <%= link_to icon_text('trash', nil, :tooltip => 'წაშლა'), sys_delete_user_url(user), :method => :delete, :confirm => 'ნამდვილად გინდათ წაშლა?' -%>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>