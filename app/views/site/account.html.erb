<div class="page-header">
  <h2>ანგარიშის მართვა <small>თქვენი პირადი მონაცემები</small></h2>
</div>
<%= simple_form_for @user, :url => account_url, :html => {:class => 'form-horizontal'} do |f| -%>
  <%= f.input :first_name, :label => 'სახელი', :input_html => {:autofocus => true} %>
  <%= f.input :last_name, :label => 'გვარი' %>
  <%= f.input :mobile, :label => 'მობილური' %>
  <div class="form-actions">
    <%= f.button :submit, 'შენახვა', :class => 'btn-primary' %>
  </div>
<% end -%>